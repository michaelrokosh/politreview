.row
  .col-md-4.col-xs-4
    = image_tag(@politic.photo_url)
  .col-md-8.col-xs-8
    %h1
      = @politic.name 
    %h3
      Діагноз:
      = @politic.post
    %h4
      Історія хвороби: 
      = @politic.about
- @politic.reviews.each do |review|
  - if review.review_type == 'positive'
    .green
      .review
        .review-header
          .username
            %h4
              = review.user.username
              = '(' + request.location.country + ')'
          .date
            %h4
              = review.created_at.to_s(:ru_datetime)
        .review-content
          = review.content
        .review-footer
          = link_to "Обсуждение (#{review.comments.count})", news_review_path(@news, review)
  - elsif
    .red
      .review
        .review-header
          .username
            %h4
              = review.user.username
              = '(' + request.location.country + ')'
          .date
            %h4
              = review.created_at.to_s(:ru_datetime)
        .review-content
          = review.content
        .review-footer
          = link_to "Обсуждение (#{review.comments.count})", news_review_path(@news, review)
%h1
  Написать рецензию
- if user_signed_in?
  = render 'review'
- else
  Для написания рецензии необходимо зарегистрироваться