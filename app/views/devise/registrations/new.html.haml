= content_for(:title, "Регистрация пользователя | shpora.me")
%h1 Регистрация
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-user
      = f.text_field :username, :placeholder => 'Нікнейм', class: 'form-control'
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-envelope-o
      = f.email_field :email, :placeholder => 'Email', class: 'form-control'
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-key
      = f.password_field :password, :placeholder => 'Пароль', class: 'form-control'
  %p
    .input-group
      %span.input-group-addon
        %i.fa.fa-key
      = f.password_field :password_confirmation, :placeholder => 'Підтвердження паролю', class: 'form-control'
  %p= f.submit "Зареєструватись", class: 'btn btn-default'